{
  "name": "@berg10/semantic-repo",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src"
  },
  "dependencies": {
    "elysia": "^1.3.10",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/graphql-yoga": "^1.3.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "bullmq": "^5.58.0",
    "ioredis": "^5.7.0",
    "zod": "^4.0.17",
    "uuid": "^11.1.0",
    "crypto-js": "^4.2.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/bun": "^1.2.20",
    "@types/uuid": "^10.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0"
  }
}